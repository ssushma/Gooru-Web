<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style field="unitStyle" src="collectionSummary.css" />
	 <g:HTMLPanel>
 	 <g:HTMLPanel styleName="{unitStyle.maincontainer}">
 	 <g:HTMLPanel>
 	 <g:HTMLPanel>
 	 <g:HTMLPanel styleName="{unitStyle.summary_title}">Collection Summary</g:HTMLPanel>
 	 <g:HTMLPanel>Analyze how your students performed on the collection overall and view a more detailed report on student usage.</g:HTMLPanel>
 	 </g:HTMLPanel>
 	 <g:HTMLPanel>
 	 <g:ListBox ui:field="studentsListDropDown" styleName="{unitStyle.filterDropDown}">
	 </g:ListBox>
	 </g:HTMLPanel>
	 <!-- Collection Summary Top -->
	     <g:HTMLPanel>
		    <g:HTMLPanel styleName="{unitStyle.collectionSummaryDetailsWrapper}">
			<g:HTMLPanel styleName="{unitStyle.left_container}">
			<g:Image ui:field="collectionImage" styleName="{unitStyle.collection_teacher_img}"></g:Image>
			<g:HTMLPanel styleName="{unitStyle.collection_details_teacher}">
			<g:InlineLabel ui:field="collectionTitle"></g:InlineLabel>
			<br/>
			<g:InlineLabel ui:field="collectionResourcesCount" styleName="{unitStyle.question_resource_details}">6 Resources | 11 Questions</g:InlineLabel>
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{unitStyle.resource_in_collection_teacher_summary}">
			<g:InlineLabel styleName="{unitStyle.collectionLastAccessed}">Collection Last Accessed</g:InlineLabel> 
			<g:InlineLabel ui:field="collectionLastAccessed" styleName="{unitStyle.question_resource_details}"></g:InlineLabel>
			</g:HTMLPanel>
			</g:HTMLPanel>
			</g:HTMLPanel>
		 </g:HTMLPanel>
	  <!-- Collection Summary Top  End-->
	  <!-- Sessions start-->
	  <g:HTMLPanel ui:field="sessionspnl">
		   <g:HTMLPanel styleName="{unitStyle.gooru_session_data_content}">
	       		<g:HTMLPanel styleName="{unitStyle.left_session}">
					<g:HTMLPanel styleName="{unitStyle.collection_last_accessed}">
						<span class="collectionLastAccessed">Session Start Time : </span>
						<g:InlineLabel ui:field="lastModifiedTime"></g:InlineLabel>
					</g:HTMLPanel>
				</g:HTMLPanel>
	       		<g:HTMLPanel styleName="{unitStyle.right_session}">
	       		<g:HTMLPanel>
				<g:HTMLPanel styleName="{unitStyle.d_filter_session_text}"><span>Session</span><span class="tooltip-icon"><img class="report-info" style="background:none;float: right; margin-top: 12px;margin-left: 4px;" src="images/question_blue.png" data-text="Select the student session (collection attempt) to be represented below." original-title=""></img>:</span></g:HTMLPanel>
				<g:HTMLPanel styleName="{unitStyle.session_data}">
				 <g:ListBox ui:field="sessionsDropDown" styleName="{unitStyle.filterDropDownSessions}">
				 </g:ListBox>
				</g:HTMLPanel>
				</g:HTMLPanel> 
				</g:HTMLPanel>
      	 </g:HTMLPanel>
		 </g:HTMLPanel>
	  <!-- Sessions end-->
 	 </g:HTMLPanel>
 	  
 	 <g:HTMLPanel>
	 <g:HTMLPanel styleName="{unitStyle.htmlpanlProgress}" ui:field="scrollForCollectionProgress">
	 <g:VerticalPanel ui:field="pnlSummary"/>
	 </g:HTMLPanel>
	 </g:HTMLPanel>
	 </g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 