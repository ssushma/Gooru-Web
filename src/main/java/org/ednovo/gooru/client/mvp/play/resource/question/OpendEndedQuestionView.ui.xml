<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style field= "oeStyle" src="questionresource.css" type="org.ednovo.gooru.client.mvp.play.resource.question.QuestionStyleResource"/>
		<g:FlowPanel styleName="col-md-6 col-sm-6">
          	  <g:HTMLPanel styleName="{oeStyle.openEndedQuestionAnswerTitle}" ui:field="answertext"></g:HTMLPanel>
          	  <g:HTMLPanel>
          	  	<g:Label styleName="{oeStyle.systemMessageStyle}" ui:field="messageBodyText"></g:Label>
          	  	<g:Label styleName="{oeStyle.charLimit}" ui:field="lblCharLimit"/>
          	  </g:HTMLPanel>
              <g:TextArea styleName="{oeStyle.openEndedQuestionAnswer}" ui:field="openEndedAnswerTextArea"></g:TextArea>
              <g:Label ui:field="errorMessageText" styleName="{oeStyle.errorMessageStyle}"></g:Label>
              <g:FlowPanel styleName="{oeStyle.questionSubmitButton}">
              		<g:Button styleName="{oeStyle.hintsInActiveButton} {oeStyle.addjustSubmitButton}" ui:field="submitButton"></g:Button>
              </g:FlowPanel>
              <g:HTMLPanel styleName="{oeStyle.openEndedQuestionAnswerHolder}" ui:field="answetTextAfterSubmission"></g:HTMLPanel>
              <g:Label ui:field="submittedText" styleName="{oeStyle.openEndedQuestionAnswerText}"></g:Label>
        </g:FlowPanel>
</ui:UiBinder>