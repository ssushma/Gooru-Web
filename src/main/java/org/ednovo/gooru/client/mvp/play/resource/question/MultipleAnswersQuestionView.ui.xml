<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style field="oeStyle" src="questionresource.css" type="org.ednovo.gooru.client.mvp.play.resource.question.QuestionStyleResource"/>
		<g:FlowPanel styleName="col-md-6 col-sm-6">
          	  <g:HTMLPanel styleName="{oeStyle.openEndedQuestionAnswerTitle}" ui:field="answerText"></g:HTMLPanel>
          	  <g:Label styleName="{oeStyle.systemMessageStyle}" ui:field="messageBodyText"></g:Label>
          	  <g:HTMLPanel styleName="{oeStyle.yesnotextContainer}">
          	  <g:InlineLabel styleName="{oeStyle.yesText}" ui:field="btnYes"></g:InlineLabel>
          	   <g:InlineLabel styleName="{oeStyle.noText}" ui:field="btnNo"></g:InlineLabel>
          	  </g:HTMLPanel>
          	  <g:FlowPanel ui:field="optionsContainer"></g:FlowPanel>
          	   <g:FlowPanel styleName="{oeStyle.questionSubmitButton}">
          	  		<g:Button styleName="{oeStyle.hintsInActiveButton} {oeStyle.adjustCheckAnswerButton}" ui:field="checkAnswer"></g:Button>
          	  	</g:FlowPanel>
	     </g:FlowPanel>
</ui:UiBinder>