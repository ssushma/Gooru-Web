<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:header="urn:import:org.ednovo.gooru.client.mvp.play.collection.header"
	xmlns:uc="urn:import:org.ednovo.gooru.client.uc"  xmlns:ptag= "urn:import:org.ednovo.gooru.client.uc">
	<ui:style field="style" src="unitsetup.css" />
		<ui:style field="stylenew" src="unitsetupstudent.css" />
		<ui:with field="i18n" type="org.ednovo.gooru.shared.i18n.MessageProperties"/>
	<g:HTMLPanel styleName="{style.unitDetails} {stylenew.outerContainer}">
	    <g:HTMLPanel styleName="{style.containerTeacher}">
			<g:HTMLPanel styleName="col-xs-12 {style.gerybg} {style.UnitSetupMain}">
				<g:HTMLPanel styleName="col-xs-4 {stylenew.widthoverride}">
					<ptag:PPanel styleName="{style.uniSetup}">
							
					</ptag:PPanel>
				</g:HTMLPanel>
				<g:HTMLPanel styleName="col-xs-8">
					<h3 class="text-center" text="{i18n.GL2198}"></h3>
					<g:HTMLPanel styleName="row {stylenew.classOptionsMain}">
						<g:HTMLPanel styleName="col-xs-2 {stylenew.smallerWidth} {stylenew.classOverOptions} text-center">
							<g:InlineLabel styleName="{stylenew.bubbleSmall}"></g:InlineLabel> 
							<g:InlineLabel text="{i18n.GL2209}"></g:InlineLabel> 
						</g:HTMLPanel>
						<g:HTMLPanel styleName="col-xs-2 {stylenew.smallerWidth} {stylenew.classOverOptions} text-center">
							<g:InlineLabel styleName="{stylenew.bubbleSmall} {stylenew.stylishBub}"></g:InlineLabel>
							<g:InlineLabel text="{i18n.GL2201}"></g:InlineLabel> 
						</g:HTMLPanel>
						<g:HTMLPanel styleName="col-xs-2 {stylenew.smallerWidth} {stylenew.classOverOptions} text-center">
							<g:InlineLabel styleName="{stylenew.bubbleSmall} {stylenew.greenBubble}"></g:InlineLabel>
							<g:InlineLabel text="{i18n.GL2210}"></g:InlineLabel> 
						</g:HTMLPanel>
						<g:HTMLPanel styleName="col-xs-2 {stylenew.classOverOptions} text-center">
							<g:InlineLabel styleName="{stylenew.bubbleSmall} {stylenew.redBubble}"></g:InlineLabel> 
							<g:InlineLabel text="{i18n.GL2211}"></g:InlineLabel>
						</g:HTMLPanel>
						<g:HTMLPanel styleName="col-xs-2 {stylenew.smallWidth} {stylenew.classOverOptions} text-center">
							<g:InlineLabel styleName="{stylenew.bubbleSmallrounded}"></g:InlineLabel> 
							<g:InlineLabel text="{i18n.GL2212}"></g:InlineLabel>
						</g:HTMLPanel>
						<g:HTMLPanel styleName="col-xs-2 {stylenew.classOverOptions} text-center">
							<img src="images/checkMarkWhite.png"/> 
							<g:InlineLabel text="{i18n.GL2213}"></g:InlineLabel>
						</g:HTMLPanel>
				</g:HTMLPanel>
			</g:HTMLPanel>
			<g:HTMLPanel styleName="col-xs-4 text-right {stylenew.widthoverride}">
				<ptag:PPanel styleName="{style.uniSetup}">
				    	<g:Anchor styleName="{style.unitdetailsLbl}" ui:field="unitDetailsAnchor" text="{i18n.GL2214}"></g:Anchor> 
						<g:Image url="images/blueRightArrow.png"></g:Image>
				</ptag:PPanel>
			</g:HTMLPanel>
		</g:HTMLPanel>
		<g:HTMLPanel styleName="clearfix" ui:field="clearfix"></g:HTMLPanel>
		<g:VerticalPanel styleName="col-xs-12 {style.setupMain}" ui:field="unitAssignmentWidgetContainer"></g:VerticalPanel>
		<g:HTMLPanel styleName="clearfix"></g:HTMLPanel>
		<g:HTMLPanel styleName="{style.paginationStudentStyle}">
			<ptag:HTMLEventPanel ui:field="paginationPanel" styleName="text-right" ></ptag:HTMLEventPanel></g:HTMLPanel>
	   </g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>