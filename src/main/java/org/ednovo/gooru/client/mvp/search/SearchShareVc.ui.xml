<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:uc="urn:import:org.ednovo.gooru.client.uc">
	<ui:style>
		.shareShortenUrl {
			border: 1px solid #ddd;
		    color: #1076BB;
		    font-size: 12px;
		    height: 18px;
		    width: 95%;
		    margin: 5px 0px 0px 0px;
			padding: 6px 0px 6px 5px;
		}
		.shareShortenUrlContainer { 
			height: 52px;
			width: 713px;
			margin-left: 12px;
			padding-left: 3px;
			margin: 5px 10px;
			cursor: text;
		}
		.shareShortenUrlContainerInputContainer
		{
			float:left;
			width: 332px;
			
		}
		.shareSeparatorLine
		{
			float: left;
			width: 1px;
			height: 130px;
			background-color: #CCC;
			margin-left: 10px;
			margin-right: 10px;
		}
		.shareLineInSocialMediaPartContainer
		{
			float:left;
			width:130px;
			margin-left:20px;
		}
		.shareLineInSocialMediaText
		{
			float: left;
		    font-family: arial;
		    font-size: 12px;
		    color: #515151;
		}
		.shareSocialMediaIconContainer
		{
			float: left;
			width:107px;
		}
		.shareSocialMediaIcon
		{
			float:left;
			width:29px;
			height:28px;
			margin-right:13px;
		}
		.shareLineInSocialMedia{
	        width:154px;	        
	    }

		.embedContainer{
			float:left;
		}
		
	</ui:style>
	<ui:with type="org.ednovo.gooru.client.mvp.search.SearchCBundle" field="res" />
	<g:FlowPanel styleName="row-fluid {res.css.panelFooterMenuInfo}">
		<g:FlowPanel styleName="col-md-4 col-sm-4 col-xs-4 {res.css.shareLink}">
			<uc:PPanel  ui:field="shareViaText"></uc:PPanel>
			<g:HTMLPanel  ui:field="socialContentPanel"/>
		</g:FlowPanel>
<!-- 		<g:FlowPanel styleName="{style.shareSeparatorLine}"></g:FlowPanel>
 -->		<g:FlowPanel ui:field="socialShareLinksViewContainer" styleName="col-md-8 col-sm-8 col-xs-8 {res.css.shareRight}"></g:FlowPanel>
	</g:FlowPanel>	
</ui:UiBinder> 