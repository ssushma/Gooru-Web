<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gg="urn:import:org.ednovo.gooru.client.uc" xmlns:panel="urn:import:org.ednovo.gooru.client.ui">
	<!-- <ui:with type="org.ednovo.gooru.client.mvp.home.HomeCBundle" field="res" /> -->
	<ui:with type="org.ednovo.gooru.client.mvp.home.LoginPopUpCBundle"
		field="res" />
	<g:HTMLPanel styleName="{res.css.LoginpopupMain}">
		<g:HTMLPanel styleName="{res.css.popupInnerforgotPassword}">
		     <g:HTMLPanel styleName="{res.css.LoginpopupHeader}">
		        <g:HTMLPanel styleName="row">
		            <g:HTMLPanel styleName="col-md-9 col-xs-9">
		        		<g:Label  ui:field="lblLoginHeading"/>        
		            </g:HTMLPanel>
		    	    <g:HTMLPanel styleName="col-md-3 col-xs-3 {res.css.closeContainer}">
		    	    	<g:Anchor styleName="{res.css.closeButton}" ui:field="cancelButton"></g:Anchor>    
		    	    </g:HTMLPanel> 
					<g:HTMLPanel styleName="clearfix"/>            
		        </g:HTMLPanel> 
		    </g:HTMLPanel>
		
			<g:HTMLPanel styleName="{res.css.popupContentforgotPassword}">
			    <g:Label styleName="{res.css.forgotPasswordText}" ui:field="lblDisplayTextMessage" />
			     <g:Label styleName="{res.css.forgotPasswordDescription}" ui:field="lblTextMessageInfomation" />
				<g:HTMLPanel styleName="{res.css.forgotPasswordTextBoxContainer}">
					<gg:TextBoxWithPlaceholder ui:field="forgotEmailIdTxtBox"  styleName="form-control"/>
					<g:Label ui:field="errorMessage" styleName="{res.css.forgotPasswordErrorMessage}"/>
					<!-- <g:Anchor ui:field="forgotPwdCancelAnr" text="Cancel" /> -->
			 	</g:HTMLPanel>
			 	<g:HTMLPanel styleName="{res.css.forgotPasswordButtonContainer}">
						<g:Button ui:field="sendMailBtnUc" styleName="primary"></g:Button> 	    
			 	</g:HTMLPanel>
			
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{res.css.leaveRegistrationBottomContainer}">
			    <g:HTMLPanel styleName="{res.css.leaveRegistarionFooterText}">
			     <gg:PPanel>
					<g:Label ui:field="queriesText"/>
			    	<g:InlineLabel ui:field="pleaseContactLbl"/> <g:Anchor ui:field="supportLink" target="_blank"></g:Anchor>
			    </gg:PPanel>   
			</g:HTMLPanel>
			</g:HTMLPanel>
			</g:HTMLPanel>
			</g:HTMLPanel>
			
